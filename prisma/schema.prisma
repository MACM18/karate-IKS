generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User accounts for Authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?   // For credentials auth
  role          Role      @default(STUDENT)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  studentProfile StudentProfile?
  accounts       Account[]
  sessions       Session[]
}

enum Role {
  STUDENT
  SENSEI
  ADMIN
}

// Sensitive PII separated into a profile
model StudentProfile {
  id               String   @id @default(cuid())
  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  phone            String?
  emergencyContact String?  // PII: Consider application-level encryption
  dateOfBirth      DateTime?
  
  currentRankId    String?
  currentRank      Rank?    @relation(fields: [currentRankId], references: [id])
  
  attendance       Attendance[]
  promotions       StudentPromotion[]
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

// Belt Ranks
model Rank {
  id          String   @id @default(cuid())
  name        String   // e.g., "White Belt", "Yellow Belt"
  colorCode   String   // e.g., "#ffffff", "#facc15"
  order       Int      @unique // 0, 1, 2... for progression logic
  
  students    StudentProfile[]
  resources   Resource[] // Minimum rank required to view
  promotions  StudentPromotion[]
}

// History of belt promotions
model StudentPromotion {
  id          String   @id @default(cuid())
  studentId   String
  student     StudentProfile @relation(fields: [studentId], references: [id])
  
  rankId      String
  rank        Rank     @relation(fields: [rankId], references: [id])
  
  promotedAt  DateTime @default(now())
  notes       String?
}

// Dojo Operations
model Attendance {
  id          String   @id @default(cuid())
  studentId   String
  student     StudentProfile @relation(fields: [studentId], references: [id])
  
  date        DateTime @default(now())
  classType   String   // e.g., "Kids", "Adults", "Advanced"
  
  checkedInBy String?  // ID of Sensei who checked them in
}

// Content Management (News/Feed)
model Post {
  id          String   @id @default(cuid())
  title       String
  content     String   // Markdown or HTML
  category    Category @default(NEWS)
  published   Boolean  @default(false)
  imageUrl    String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Category {
  NEWS
  EVENT
  PROMOTION
  ALERT
}

// Digital Dojo Bag
model Resource {
  id          String   @id @default(cuid())
  title       String
  description String?
  type        ResourceType // VIDEO, PDF
  url         String
  
  minRankId   String?
  minRank     Rank?    @relation(fields: [minRankId], references: [id])
  
  createdAt   DateTime @default(now())
}

enum ResourceType {
  VIDEO
  PDF
}

// NextAuth.js Standard Models (Adapters)
model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}
